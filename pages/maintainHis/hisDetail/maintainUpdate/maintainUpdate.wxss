/* maintainUpdate.wxss */

page {
  height: 100%;
}

.updateView {
  width: 100%;
  height: auto;
  margin-top: 30px;
  overflow: hidden;
  z-index: 100;
}

.itemView {
  margin: 0;
  width: 100%-5px;
  height: 40px;
  line-height: 40px;
  padding-left: 5px;
  border-bottom: 1px solid #f4f4f4;
  background-color: white; 
  overflow: hidden;
}

.keyT {
  display: block;
  width: 80px;
  height: 40px;
  float: left;
  text-align: right;
  font-weight: bold;
  font-size: 15px;
  color: black;
}

.valueT {
  display: block;
  height: 40px;
  margin-left: 20px;
  float: left;
  text-align: left;
  font-weight: normal; 
  font-size: 15px;
  color: #a0a0a0;      /*#c8c8c8;*/
}

.textView {
  width: 100%;
  height: 40px;
  margin:0;
}

.partsItem {
  height: 40px;
  margin-left: 20px;
  border-top: 1px solid #fafafa;
}

.inputView {
  padding: 0;
  width: 11px;
  height: 20px;
  line-height: 20px;
  float: right;
  margin-right: 20px;
  margin-top: 10px;
}

.imageSelectBt {
  height:80px;
  width:80px;
  float:left;
  margin-top: 10px;
  margin-left: 10px;
  border-radius: 5px;
  border: 1px dashed gray;
}

.submitView {
  width: 100%;
  height: 30px;
  display: flex;
  justify-content: center;
  margin: 30px 0 30px 0;
}

.submitBt {
  margin: 0;
  width: 80px;
  height: 30px;
  line-height: 30px;
  border-radius: 5px;
  background-color: #f14948;
  color: white;
  font-size: 20px;
  text-align: center;
}

.selectMask {
  background-color: gray;
  opacity: 0.5;
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0; 
  z-index: 1000;
  overflow: hidden;
}

.windowSelect {
  background-color: white;
  width: 500rpx;
  height: auto;
  border-radius: 5px;
  position: fixed;
  top: 0;
  left: 0; 
  margin: 200rpx 75rpx 0 75rpx;
  padding: 50rpx;
  z-index: 1001;
  overflow: hidden;
}

.radio-group {
  width: 100%;
  margin: 0;
  padding: 0;
}

.radio {
  display: block;
  width: 500rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin: 0;
  font-size: 15px;
  border-bottom: 1px solid #e4e4e4;
}

.titleLabel {
  width: 500rpx;
  height: 120rpx;
  line-height: 120rpx;
  font-weight: bold;
}

/* 最后一个部件状态不需要下划线 */
/* 最后一个完成状态不需要下划线 */
#status3,#complete3  {
  border-bottom-width: 0;
}

