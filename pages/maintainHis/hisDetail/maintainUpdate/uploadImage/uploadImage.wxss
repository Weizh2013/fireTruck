/* uploadImage.wxss */

.selectInfoView {
  width: 100%;
  height: 50px;
  justify-content: center;
  display: flex;
  text-align: center;
  overflow: hidden;
}

.selectInfoView view{
  background-color: #f14948;
  color: white;
  text-align: center;
  border-radius: 10px;
  width: 150px;
  height: 30px;
  line-height: 30px;
  margin-top: 10px;
}

.imageBackView {
  width: 100%;
  height: auto;
  margin-bottom: 30px;
  overflow: hidden;
}

.imageView {
  float: left;
  margin-left: 20rpx;
  margin-top: 50rpx;
  width:220rpx;
  height:220rpx;
}

.addImg {
  width:100%;
  height:50px;
  color:gray;
  line-height:50px;
  margin-top:15px;
  text-align:center;
  font-size:60px;
  font-weight:normal;
}

.addImgA {
  width:100%;
  height:30px;
  line-height:30px;
  color:gray;
  text-align:center;
  font-size:12px;
}

.completeView {
  width: 100%;
  height: 30px;
  display: flex;
  justify-content: center;
  margin-top: 30px 0 30px 0;
}

.completeBt {
  margin: 0;
  width: 80px;
  height: 30px;
  line-height: 30px;
  border-radius: 5px;
  background-color: #f14948;
  color: white;
  font-size: 20px;
  text-align: center;
}