/* hisDetail.wxss */

.imgView {
  width: 80%;
  margin-left: 10%;
}
.imgView image {
  width: 100%;
}

.detailView, .partsView {
  width: 90%;
  margin-left: 5%;
  background-color: white;
  height: auto;
  overflow: hidden;
}

.infoView, .parts, .partView {
  height:auto;
  width:90%;
  float:left;
  line-height: 50px;
  font-size: 15px;
  padding-left: 5px;
  border-bottom: 1px solid #f4f4f4;
}

.keyT {
  display: block;
  width: 80px;
  float: left;
  text-align: right;
  font-weight: bold;
  color: black;
}

.valueT {
  display: block;
  margin-left: 20px;
  float: left;
  text-align: left;
  font-weight: normal; 
  color: #a0a0a0;      /*#c8c8c8;*/
}

.partName {
  float:left;
  width: 200rpx;
  text-align: right;
}

.partStatus {
  float:left;
  width: 200rpx;
  text-align: left;
  margin-left: 10px;
}

.updateView {
  width: 100%;
  height: 30px;
  display: flex;
  justify-content: center;
  margin: 30px 0 30px 0;
}

.updateBt {
  margin: 0;
  width: 80px;
  height: 30px;
  line-height: 30px;
  border-radius: 5px;
  background-color: #f14948;
  color: white;
  font-size: 20px;
  text-align: center;
}