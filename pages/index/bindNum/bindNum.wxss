/* bindNum.wxss */

.tipView {
  margin-left: 10px;
  height: 50px;
  line-height: 50px;
  font-size: 15px;
  color: gray;
}

.phoneNumView {
  width: 100%;
  height: 60px;
  line-height: 60px;
  background-color: white;
}

.zone {
  float: left;
  text-align: center;
  width: 20%;
  height: 40px;
  line-height: 40px;
  margin-top: 10px;
}

.phoneNum {
  float: left;
  width: 70%;
  height: 40px;
  line-height: 40px;
  padding-left: 10px;
  margin-top: 10px;
  border-left: 1px solid #c4c4c4;
}

.phoneNum input {
  width: 100%;
  height: 100%;
  line-height: 40px;
}

.codeView {
  width: 100%;
  height: 60px;
  line-height: 60px;
  background-color: white;
  margin-top: 1px;
}

.validateCode {
  width: 350rpx;
  height: 40px;
  line-height: 40px;
  float: left;
  margin-top: 10px;
  margin-left: 30px;
}

.validateCode input {
  width: 100%;
  height: 100%;
  line-height: 40px;
}

.codeBt {
  width: 300rpx;
  height: 40px;
  line-height: 40px;
  margin-top: 10px;
  margin-right: 10px;
  float: right;
  border-radius: 5px;
  color: white;
  font-size: 15px;
}

.submitBt {
  width: 400rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  margin-top: 30px;
  color: white;
  background-color: green;
}
