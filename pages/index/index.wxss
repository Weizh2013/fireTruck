/* index.wxss */

.titleView {
  width: 100%;
  height: 500rpx;
  margin-top: 10px;
  background-color: white;
  overflow: hidden;
}

.avatarView {
  width: 250rpx;
  height: 250rpx;
  border-radius: 125rpx;
  margin: 90rpx 250rpx 0 250rpx;
  background-color: #c4c4c4;
}

.avatarView image {
  width:100%;
  height:100%;
  border-radius: 125px;
}

.loginBt {
  width: 450rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin: 30rpx 150rpx 0 150rpx;
  border-radius: 40rpx;
  color: white;
  background: green;
}

.nicknameLb {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  margin-top: 30rpx;
  text-align: center;
}

.infoView {
  width: 100%;
  height: 50px;
  line-height: 50px;
  margin-top: 10px;
  background-color: white;
}

.keyT {
  width: 320rpx;
  float: left;
  margin-left: 55rpx;
  text-align: left;
  font-weight: bold;
  font-size: 15px;
  color: black;
}

.valueT {
  width: 320rpx;
  float: right;
  margin-right: 55rpx;
  text-align: right;  
  font-weight: normal; 
  font-size: 15px;
  color: #a0a0a0;      /*#c8c8c8;*/
}

.animationView {
  background-color: green;
  margin-top: 50px;
  margin-left: 150rpx;
  width: 450rpx;
  height: 100rpx;
}